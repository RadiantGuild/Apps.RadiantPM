{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "isolatedModules": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["vite/client", "vite-plugin-svgr/client", "react/next", "react-dom/next"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "**/.*/"]
}
